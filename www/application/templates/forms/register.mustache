<form method="post" action="{{base}}{{form-url}}">
	Username: <input type="text" name="username" value="{{values.username}}" /> {{errors.username}} <br />
	Password: <input type="password" name="password" value="" /> {{errors.password}} <br />
        Confirm: <input type="password" name="password_confirm" value="" /> {{errors.password_confirm}} <br />
        <input type="hidden" name="csrf" value="{{token}}" /> {{errors.csrf}} <br />
	<input type="submit" name="login" value="Register" />
</form>